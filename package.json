{
  "name": "mapinou-builder",
  "version": "1.0.0",
  "description": "A game about cartographic navigation.",
  "author": "jberli",
  "license": "GPL-3.0-or-later",
  "source": "server.js",
  "type": "module",
  "scripts": {
    "initialize": "run-func .database/manage.js initialize",
    "update": "run-func .database/manage.js update",
    "populate": "run-func .database/manage.js populate",
    "clean-dist": "rm -rf dist && mkdir dist && mkdir dist/mapinou-builder",
    "copy-img": "cp -vR ./client/img ./dist/mapinou-builder",
    "copy-sounds": "cp -vR ./client/sounds ./dist/mapinou-builder",
    "copy-sprites": "cp -vR ./client/sprites ./dist/mapinou-builder",
    "copy-assets": "npm run copy-img && npm run copy-sounds && npm run copy-sprites",
    "watch": "parcel watch ./client/index.html --public-url /mapinou-builder --dist-dir dist/mapinou-builder",
    "daemon": "nodemon ./server/server.js",
    "dev": "npm run clean-dist && npm run copy-assets && concurrently --kill-others \"npm run watch\" \"npm run daemon\"",
    "clean-temp": "rm -rf dist-temp && mkdir dist-temp && mkdir dist-temp/mapinou-builder",
    "copy-assets-temp": "cp -vR ./client/img ./dist-temp/mapinou-builder && cp -vR ./client/sounds ./dist-temp/mapinou-builder && cp -vR ./client/sprites ./dist-temp/mapinou-builder",
    "swap-dist": "rm -rf dist && mv dist-temp dist",
    "build": "npm run clean-temp && npm run copy-assets-temp && parcel build ./client/index.html --public-url /mapinou-builder --dist-dir dist-temp/mapinou-builder && npm run swap-dist",
    "deploy": "node server/server.js"
  },
  "keywords": [
    "game",
    "cartography"
  ],
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "current-device": "^0.10.2",
    "maplibre-gl": "^5.6.2",
    "proj4": "^2.15.0"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/transformer-sass": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "body-parser": "^2.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.2",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.9",
    "parcel": "^2.13.3",
    "parcel-plugin-clean-dist": "^0.0.6",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "pg": "^8.15.1",
    "run-func": "^3.0.0",
    "sass": "^1.83.4",
    "svgo": "^3.3.2"
  }
}